- "    - {{ record.name }}.{{ platform_domain | default(effective_zone_name) | default(cloudflare_zone_name) }} → {{ record.content }} ({{ record.type }})"
{% endfor %}
{% endif %}
{% if cloudflare_scope | default('all') in ['all', 'domain'] %}
- "  ✓ Domain settings (SSL, cache, Argo)"
{% endif %}
{% if cloudflare_scope | default('all') in ['all', 'global'] %}
- "  ✓ Global settings (security headers, rate limiting)"
{% endif %}
